manifest {
    mainScript = 'analysis.nf'
}

// default parameters
params {
    cores = "8"
    help = false

    fasta = ''
    list = false
 
    sour_db = false
    sour_db_present = 'db_auto-build/genbank-k31.lca.json.gz'

    // options
    sourmeta = false
    sourclass = false

    // folder structure
    output = 'results'
}

profiles {

  standard {
        process.executor = 'local'
        docker { enabled = true }
        params.cpus = params.cores
        process {
            withLabel: sourmash { container = 'nanozoo/sourmash:2.0.1--f0176ca' }
        }}}